<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_video_bottom_bar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_video_bottom_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_bottom_tab_video_selected" />

        <TextView
            android:id="@+id/tv_video_bottom_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_bottom_tab_video"
            android:textColor="@color/blue"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_music_bottom_bar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_music_bottom_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_bottom_tab_bar_music_not_selected" />

        <TextView
            android:id="@+id/tv_music_bottom_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_bottom_tab_music"
            android:textColor="@color/text_color_gray_dark"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_app_bottom_bar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_app_bottom_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_bottom_tab_bar_app_not_selected" />

        <TextView
            android:id="@+id/tv_app_bottom_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_bottom_tab_app"
            android:textColor="@color/text_color_gray_dark"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_find_bottom_bar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_find_bottom_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_bottom_tab_bar_find_not_selected" />

        <TextView
            android:id="@+id/tv_find_bottom_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_bottom_tab_find"
            android:textColor="@color/text_color_gray_dark"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_user_center_bottom_bar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_user_center_bottom_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_bottom_tab_bar_user_center_not_selected" />

        <TextView
            android:id="@+id/tv_user_center_bottom_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_bottom_tab_user_center"
            android:textColor="@color/text_color_gray_dark"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>
